{
  "name": "splitter-directive",
  "version": "0.0.0",
  "description": "",
  "license": "WTFPL",
  "repository": "luncheon/splitter-directive",
  "main": "index.min.js",
  "module": "index.min.js",
  "keywords": [
    "layout",
    "splitter",
    "split-pane",
    "split-panes",
    "split-layout",
    "vanilla",
    "vanilla-js"
  ],
  "scripts": {
    "clean": "node -e \"const fs=require('fs');['index.js','index.min.js','styles.css','styles.min.css'].forEach(f=>fs.existsSync(f)&&fs.unlinkSync(f))\"",
    "build": "npm-run-all clean build:*",
    "build:js": "tsc -p . && terser -c -m -o index.min.js index.js && gzip-size index.min.js",
    "build:css": "stylus src/styles.styl -o styles.css && postcss styles.css -o styles.min.css --no-map -u cssnano && gzip-size styles.min.css",
    "watch": "npm-run-all clean -p watch:*",
    "watch:js": "sane \"npm run build:js\" --glob=\"index.ts\"",
    "watch:css": "sane \"npm run build:css\" --glob=\"styles.styl\""
  },
  "devDependencies": {
    "cssnano": "^4.1.10",
    "gzip-size-cli": "^3.0.0",
    "highlight.js": "^9.15.10",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.3",
    "sane": "^4.1.0",
    "stylus": "^0.54.7",
    "terser": "^4.3.8",
    "typescript": "^3.6.4"
  }
}
