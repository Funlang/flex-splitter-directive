[data-flex-splitter-horizontal]
[data-flex-splitter-vertical]
  > *
    flex none
    overflow auto
    box-sizing border-box

  > [role=separator]
    touch-action none
    display flex
    align-items center
    justify-content center
    background-color rgba(160,160,160,.15)

    &::before
      content ''
      box-sizing border-box
      border 1px rgba(160,160,160,.7)

[data-flex-splitter-horizontal]
  display flex

  > [role=separator]
    cursor ew-resize
    width 7px

    &::before
      width 3px
      height 32px
      border-style none solid

[data-flex-splitter-vertical]
  display flex
  flex-direction column

  > [role=separator]
    cursor ns-resize
    height 7px

    &::before
      width 32px
      height 3px
      border-style solid none
